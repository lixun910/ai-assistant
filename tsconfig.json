{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "**/__tests__/*"
  ]
}
